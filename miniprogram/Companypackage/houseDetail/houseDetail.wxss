/* Companypackage/houseDetail/houseDetail.wxss */
page{
  background-color: #f7f7f7;
}
.swiper{
  height: 400rpx;
}
.swiper-img{
  width: 100%;
  height: 400rpx;
}
.header-box{
  background-color: #fff;
  padding: 30rpx;
}
.header-box>view{
  padding-bottom: 10rpx;
}
.header-name{
  font-weight: bold;
  font-size: 28rpx;
}
.header-price{
  display: flex;
  justify-content: space-between;
  color: red;
}
.header-tags{
  display: flex;

}
.header-tags .tags{
  background-color: #f7f7f7;
  border-radius: 4rpx;
  color: #888;
  padding:4rpx 10rpx;
  margin-right: 10rpx;
}
.detail-box{
  margin-top: 20rpx;
  background-color: #fff;
  padding:30rpx
}
.detail-box .title{
  font-size: 28rpx;
  font-weight: bold;
  padding-bottom: 10rpx;
}
.detail-item{
  display: flex;
  padding:20rpx 0;
  align-items: center;
  border-bottom: 1rpx solid #f7f7f7;
  color: #888;
}
.detail-item .info{
  padding-left: 8rpx;
}
.contact-box{
  margin-top: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding:30rpx;
}
.contact-img{
  width: 120rpx;
  height: 120rpx;
}
.contact-img image{
  width: 100%;
  height: 100%;
}
.contact-phone{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.contact-phone image{
  width: 100rpx;
  height: 100rpx;
}
.contact-phone text{
  color: #888;
}
.contact-info{
  flex: 1;
  display: flex;
  flex-direction: column;
  padding:0 20rpx;
}
.contact-info .name{
  font-weight: bold;
  font-size: 28rpx;
}
.contact-info .phone{
  color: #888;
  padding-top: 8rpx;
}
.footer{
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #ccc;
  position: fixed;
  left:0;
  bottom:0;
  display:flex;
}
.footer-info{
  flex:1;
  display: flex;
  align-items: center;
}
.footer-info .item{
  width: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer-info .item image{
  width: 40rpx;
  height: 40rpx;
}
.footer-info .item text{
  margin-top: 8rpx;
}
.footer-btn{
  width: 300rpx;
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #2aa515;
  color: #fff;
}
.footer-null{
  width: 750rpx;
  height: 100rpx;
}