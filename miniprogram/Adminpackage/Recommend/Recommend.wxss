/* Adminpackage/Recommend/Recommend.wxss */
.list-item{
  margin:20rpx 0;
  padding:20rpx;
  background-color: #fff;
  display: flex;
  position: relative;
}
.item-img{
  width: 150rpx;
  height: 150rpx;
}
.item-img image{
  width: 100%;
  height: 100%;
}
.item-info{
  flex: 1;
  padding-left: 10rpx;
}
.item-info .name{
  font-weight: bold;
  padding-bottom: 10rpx;
}
.item-info .txt{
  padding:5rpx 0;
  color:#222
}
.tj{
  position: absolute;
  left: 20rpx;
  top:20rpx;
  background-color: red;
  border-radius: 0 20rpx 20rpx 0;
  color: #fff;
  z-index: 9;
  font-size: 24rpx;
  padding:8rpx;
}
.tag-box{
  width:90%;
  margin: 0 auto;
  display: flex;
}
.tag-box .tag{
  padding:8rpx 26rpx;
  background-color: #fff;
  border-radius: 10rpx;
  border: 1rpx solid #888;
  margin:30rpx 15rpx;
}
.tag-box .tag.active{
  background-color: red;
  border: 1rpx solid red;
  color: #fff;
}
