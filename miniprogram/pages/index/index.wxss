.select-box{
  width: 750rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #fff;
}
.select-box .item{
  flex: 1;
  text-align: center;
}
.select-box .item image{
  width: 200rpx;
  height: 200rpx;
}
.menu-box{
  width: 750rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  padding: 30rpx 0;
  background-color: #fff;
}
.menu-box .item{
  width:25%;
  height: 160rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.menu-box .item image{
  width: 80rpx;
  height: 80rpx;
}
.menu-box .item text{
  margin-top: 10rpx;
}
.banner{
  padding:0 30rpx;
  background-color: #fff;
}
.banner image{
  width: 100%;
  height: 140rpx;
}
.list-name{
  width: 720rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  padding-left: 30rpx;
  margin-top: 20rpx;
  font-weight: bold;
}

.list-box{
  display: flex;
  margin: 20rpx 0;
  background-color: #fff;
  padding: 20rpx;
}
.list-left{
  width: 200rpx;
  height: 200rpx;
  position: relative;
}
.list-left image{
  width: 100%;
  height: 100%;
}
.list-left text{
  position:absolute;
  left: 0;
  top: 10rpx;
  background-color: red;
  color: #fff;
  border-radius:0 20rpx 20rpx 0;
  padding: 6rpx 12rpx;
  font-size: 24rpx;
}
.list-right{
  flex: 1;
  padding-left:16rpx
}
.list-right > .name{
  font-weight: bold;
}
.info-box{
  margin-top: 20rpx;
}
.info-content{
  display:flex;
  padding:8rpx 0
}
.info-content-left{
  flex: 1;
}
.info-content-right{
  flex: 1;
  text-align: right;
}
.info-tag{
  display: flex;
 flex-wrap: wrap;
}
.info-tag .tag{
  padding:4rpx 8rpx;
  color: #888;
  border-radius: 10rpx;
  margin-right: 10rpx;
}